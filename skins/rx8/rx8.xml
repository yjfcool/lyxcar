<skin width="800" height="480" background="bg.png" header_space="0">
   <font family="Arial" size="16"/>
   <panel height="32" position="bottom" padding-left="0" padding-right="0" background="menu_bg.png"/>

   <modules>
      <default_home>
         <button released="button_up.png" pressed="button_down.png"/>

         <buttons>
            <button name="clock" value="Clock" appear-pause="0" disappear-pause="0" released="clock_up.png"
               pressed="clock_down.png">

               <rect x="20" y="20" width="96" height="96"/>
               <animation velocity="1" time="20">
                  <stop time="0" x="20" y="20" width="96" height="96" opacity="0.0" acceleration="1"/>
                  <stop time="10" x="20" y="20" width="96" height="96" opacity="0.7" acceleration="1"/>
                  <stop time="30" x="20" y="20" width="96" height="96" opacity="1.0" acceleration="1"/>
               </animation>
            </button>
         </buttons>
      </default_home>

      <volctl>
         <panel background="volctl_panel_bg.png"/>
         <volume_up_button
            released="volctl_volume_up.png"
            pressed="volctl_volume_up_act.png"/>

         <volume_down_button
            released="volctl_volume_down.png"
            pressed="volctl_volume_down_act.png"/>

         <volume_mute_button
            released="volctl_mute.png"
            pressed="volctl_mute_act.png"/>
      </volctl>
   </modules>

   <home module="default_home"/>
</skin>
